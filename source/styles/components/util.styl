
common-heading(fs, fw)
	font-family Montserrat, sans-serif
	color $main-color
	text-transform uppercase
	font-size fs
	font-weight fw


.u
	&-h1
		common-heading(28px, 700)

	&-h2
		common-heading(20px, 700)

	&-h3
		common-heading(16px, 700)

	&-plain-text
		color #464646
		font-size 16px
		letter-spacing 1.6px
		font-weight 300
		line-height 1.7

		& > :not(:last-child)
			margin-bottom 20px
			margin-top 0

	&-removed
		display none !important

	&-shadow
		box-shadow $block-box-shadow

	&-light-shadow
		box-shadow $light-shadow

	&-loader
		margin 80px auto
		display block
		height 80px
		width @height
		line-height @height
		vertical-align middle
		border-width 4px
		border-style solid
		border-color rgba(0, 0, 0, .1) rgba(0, 0, 0, .1) rgba(0, 0, 0, .1) #222
		border-radius 100%
		animation spin .6s linear infinite



@keyframes spin
	to
		transform rotate(360deg) translatez(0)


style-placeholder()
	color @color
	text-transform uppercase


.form

	&__control
		display block
		font inherit
		outline none
		background white
		border 2px solid @background
		color #424242
		font-weight 400
		padding 7px 20px
		line-height 28px
		// box-shadow 0.6px 0.8px 1px rgba(234, 234, 235, 0.75)
		// box-shadow 0 0 0 rgba(232, 232, 232, 0.11)
		box-shadow $controls-box-shadow
		font-size 15px
		letter-spacing 1.5px

		_tr(border-color)

		&::-webkit-input-placeholder
			style-placeholder()

		&::-moz-placeholder
			style-placeholder()

		&:-moz-placeholder
			style-placeholder()

		&:-ms-input-placeholder
			style-placeholder()

		&:hover
			border-color rgba($main-color, .2)

		&:focus
			border-color rgba($main-color, .5)
